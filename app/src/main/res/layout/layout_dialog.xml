<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"

    >
    <LinearLayout
        android:id="@+id/take_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialogItenHeight">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="拍摄照片"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dialogContent"
            />
        <ImageView
            android:layout_width="23sp"
            android:layout_height="23sp"
            android:background="@drawable/ic_photo_camera_gery_24dp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLightGery"/>
    <LinearLayout
        android:id="@+id/open_ablum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialogItenHeight"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="从相册中选择照片"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dialogContent"
            />
        <ImageView
            android:layout_width="23sp"
            android:layout_height="23sp"
            android:background="@drawable/ic_folder_open_black_24dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/colorDarkGery"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLightGery"/>
    <LinearLayout
        android:id="@+id/set_photo_null"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialogItenHeight">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="设置为空"
            android:textSize="@dimen/dialogContent"
            />
        <ImageView
            android:layout_width="23sp"
            android:layout_height="23sp"
            android:background="@drawable/ic_not_interested_black_24dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/colorDarkGery"
            />

    </LinearLayout>

</LinearLayout>

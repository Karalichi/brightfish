<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:background="@color/colorLightGery"
    >
    <ImageView
        android:id="@+id/ablum_item_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    <ImageView
        android:id="@+id/add_photo_icon"
        android:layout_width="@dimen/addPhotoIcon"
        android:layout_height="@dimen/addPhotoIcon"
        android:background="@drawable/ic_add_a_photo_black"
        android:backgroundTint="@color/colorDarkGery"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/add_photo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加照片"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_photo_icon"
        android:visibility="gone"
        />
    <RadioButton
        android:id="@+id/ablum_item_photo_choose"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"

        />

</RelativeLayout>
